<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluebg"
    tools:context="namex_project.pens.vammethod.Activity.About.AboutActivity">

    <TextView
        android:id="@+id/tvVAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VAM Method"
        android:layout_above="@+id/tvDSS"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:id="@+id/tvDSS"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing=".05"
        android:text="DECISION SUPPORT SYSTEM"
        android:layout_above="@+id/tvVersion"
        android:layout_centerHorizontal="true"
        android:textColor="#ECEFF1"
        android:textSize="16sp"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0.0"
        android:layout_above="@id/icon"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="16sp"
        android:fontFamily="sans-serif" />

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tvCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© 2017 Namex Inc."
        android:layout_below="@id/icon"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="16sp"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/sangsya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eka Anre Sangsya (2103151032)"
        android:layout_margin="5dp"
        android:layout_below="@+id/tvCompany"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="16sp"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/sherly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sherly Febrina Luhukay (2103151035)"
        android:layout_margin="2dp"
        android:layout_below="@+id/sangsya"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="16sp"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/wahyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wahyu Ade Sasongko (2103151042)"
        android:layout_margin="2dp"
        android:layout_below="@+id/sherly"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="16sp"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/uki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muhibush Shulhi Muhammad (2103151054)"
        android:layout_margin="2dp"
        android:layout_below="@+id/wahyu"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="16sp"
        android:fontFamily="sans-serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Rights Reserved."
        android:layout_margin="10dp"
        android:layout_below="@+id/uki"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="16sp"
        android:fontFamily="sans-serif" />

</RelativeLayout>
