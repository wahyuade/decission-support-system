<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UploadButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#4A148C</item>
        <item name="colorButtonNormal">#6A1B9A</item>
    </style>

    <style name="SaveButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#64B5F6</item>
        <item name="colorButtonNormal">#1976D2</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
